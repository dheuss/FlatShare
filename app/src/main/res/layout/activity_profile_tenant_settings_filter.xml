<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.flatshare.presentation.ui.activities.settings.ProfileTenantSettingsFilterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tenant_filter_setting_inital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayoutCouch"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/update_profile_filter"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSizeHeadLine" />

        <TextView
            android:id="@+id/tenant_filter_settings_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tenant_filter_setting_inital"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:gravity="center"
            android:text="@string/profile_filter_settings_description" />

        <!--CHANGE IDssssss-->

        <TextView
            android:id="@+id/tenant_filter_settings_price_range_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tenant_filter_settings_profile"
            android:layout_marginLeft="@dimen/marginTop"
            android:layout_marginRight="@dimen/marginTop"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/price_range_info" />

        <TextView
            android:id="@+id/tenant_filter_settings_price_range_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/tenant_filter_settings_price_range_info"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:text="My price range is from " />

        <TextView
            android:id="@+id/tenant_filter_settings_price_range_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tenant_filter_settings_price_range_info"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@+id/tenant_filter_settings_price_range_1"
            android:text="0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tenant_filter_settings_price_range_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tenant_filter_settings_price_range_info"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_filter_settings_price_range_2"
            android:text="€ to" />

        <TextView
            android:id="@+id/tenant_filter_settings_price_range_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tenant_filter_settings_price_range_info"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_filter_settings_price_range_3"
            android:text="0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tenant_filter_settings_price_range_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tenant_filter_settings_price_range_info"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_filter_settings_price_range_4"
            android:text="€" />

        <com.appyvet.rangebar.RangeBar xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar_filter_price_range"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/tenant_filter_settings_price_range_1"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            custom:connectingLineColor="@color/colorPrimary"
            custom:pinColor="@color/colorPrimary"
            custom:pinRadius="17.5dp"
            custom:rangeBarColor="@color/colorPrimary"
            custom:selectorColor="@color/colorPrimary"
            custom:selectorSize="5dp"
            custom:tickEnd="1200"
            custom:tickInterval="50"
            custom:tickStart="300" />

        <TextView
            android:id="@+id/size_filter_apartment_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rangebar_filter_price_range"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/size_apartment" />

        <TextView
            android:id="@+id/tenant_filter_settings_size_range_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/size_filter_apartment_0"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:text="The room size should be from " />

        <TextView
            android:id="@+id/tenant_filter_settings_size_range_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/size_filter_apartment_0"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@+id/tenant_filter_settings_size_range_1"
            android:text="0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tenant_filter_settings_size_range_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/size_filter_apartment_0"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_filter_settings_size_range_2"
            android:text="qm to" />

        <TextView
            android:id="@+id/tenant_filter_settings_size_range_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/size_filter_apartment_0"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_filter_settings_size_range_3"
            android:text="0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tenant_filter_settings_size_range_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/size_filter_apartment_0"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_filter_settings_size_range_4"
            android:text="qm" />

        <com.appyvet.rangebar.RangeBar xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar_filter_size_range"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/tenant_filter_settings_size_range_5"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            custom:connectingLineColor="@color/colorPrimary"
            custom:pinColor="@color/colorPrimary"
            custom:pinRadius="17.5dp"
            custom:rangeBarColor="@color/colorPrimary"
            custom:selectorColor="@color/colorPrimary"
            custom:selectorSize="5dp"
            custom:tickEnd="30"
            custom:tickInterval="1"
            custom:tickStart="12" />

        <TextView
            android:id="@+id/filter_area_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rangebar_filter_size_range"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/area_apartment" />

        <!--<com.google.android.gms.maps.MapView-->
        <!--android:id="@+id/map"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

        <LinearLayout
            android:id="@+id/filter_LinearLayoutPurposeCommunity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_area_0"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/purpose_filter_community_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/purpose_community" />

            <RadioGroup
                android:id="@+id/purposeCommunity_filter_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/purposeCommunityYES_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up_icon" />

                <RadioButton
                    android:id="@+id/purposeCommunityNO_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down_icon" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_LinearLayoutSmokingApartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_LinearLayoutPurposeCommunity"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/smoking_filter_apartment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/smoking_apartment" />

            <RadioGroup
                android:id="@+id/smokingApartment_filter_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/smokingApartmentYES_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up_icon" />

                <RadioButton
                    android:id="@+id/smokingApartmentNO_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down_icon" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_LinearLayoutBalcony"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_LinearLayoutSmokingApartment"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/filter_balcony_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/balcony" />

            <RadioGroup
                android:id="@+id/balcony_filter_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/balconyYES_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up_icon" />

                <RadioButton
                    android:id="@+id/balconyNO_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down_icon" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_LinearLayoutInternet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_LinearLayoutBalcony"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/internet_filter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/internet" />

            <RadioGroup
                android:id="@+id/internet_filter_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/internetYES_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up_icon" />

                <RadioButton
                    android:id="@+id/internetNO_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down_icon" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_LinearLayoutCabelTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_LinearLayoutInternet"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/tv_filter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/cabeltv" />

            <RadioGroup
                android:id="@+id/tv_filter_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tvYES_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up_icon" />

                <RadioButton
                    android:id="@+id/tvNO_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down_icon" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_LinearLayoutWashingMashine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_LinearLayoutCabelTV"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/wahsing_maschine_filter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/washing_machine" />

            <RadioGroup
                android:id="@+id/washingMashine_filter_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/washingMashineYES_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up_icon" />

                <RadioButton
                    android:id="@+id/washingMashineNO_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down_icon" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_LinearLayoutDryer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_LinearLayoutWashingMashine"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/filter_dryer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/dryer" />

            <RadioGroup
                android:id="@+id/dryer_filter_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/dryerYES_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up_icon" />

                <RadioButton
                    android:id="@+id/dryerNO_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down_icon" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_LinearLayoutBathtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_LinearLayoutDryer"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/batchtube_filter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bathtube" />

            <RadioGroup
                android:id="@+id/bathTube_filter_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/bathTubeYES_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up_icon" />

                <RadioButton
                    android:id="@+id/bathTubeNO_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down_icon" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_LinearLayoutPets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_LinearLayoutBathtube"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/filter_pets_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/pets" />

            <RadioGroup
                android:id="@+id/filter_pets_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/petsYES_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up_icon" />

                <RadioButton
                    android:id="@+id/petsNO_filter_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down_icon" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/filter_done_2_tenant_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_LinearLayoutPets"
            android:layout_marginBottom="@dimen/marginTop"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:background="@color/colorPrimary"
            android:hint="@string/save_profile_settings"
            android:textColor="@color/colorButtonText"
            android:textColorHint="@color/colorButtonText"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>
