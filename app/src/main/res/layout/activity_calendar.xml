                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

                <TextView
                    android:text=""
                    android:id="@+id/date1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_column="1" />
                <View
