                    android:layout_height="20dp" />
                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/delete1"
                    android:background="@drawable/delete1"
                    android:layout_column="2"
                    android:visibility="gone"
