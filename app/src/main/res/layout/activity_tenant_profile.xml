<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.flatshare.presentation.ui.activities.TenantProfileActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/initial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/create_your_tenant_profile"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/name_tenant_profile_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/initial"
            android:layout_marginTop="20dp"
            android:text="@string/surname_primary_profile_textview"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/nameText_tenant_profile_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/initial"
            android:layout_marginTop="10dp"
            android:width="200dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/email_tenant_profile_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tenant_profile_textView"
            android:layout_marginTop="20dp"
            android:text="Email:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/email_tenant_profile_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/nameText_tenant_profile_editText"
            android:width="200dp"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/age_tenant_profile_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_tenant_profile_textView"
            android:layout_marginTop="20dp"
            android:text="Age:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ageText_tenant_profile_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/email_tenant_profile_editText"
            android:width="200dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/gender_tenant_profile_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/age_tenant_profile_textView"
            android:layout_marginTop="20dp"
            android:text="Gender:"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ageText_tenant_profile_editText"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="male                  " />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="femal" />
        </RadioGroup>

        <TextView
            android:id="@+id/smoker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_tenant_profile_textView"
            android:layout_marginTop="20dp"
            android:text="Smoker:"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/smokerRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/gender_tenant_profile_textView"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/yesSmokerRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes                     " />

            <RadioButton
                android:id="@+id/noSmokerRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no      " />
        </RadioGroup>

        <TextView
            android:id="@+id/pets_tenant_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/smoker"
            android:layout_marginTop="20dp"
            android:text="@string/pets"
            android:textSize="20dp"/>

        <RadioGroup
            android:id="@+id/petsRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/smoker"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/yesPetsRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes                     " />

            <RadioButton
                android:id="@+id/noPetsRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no      " />
        </RadioGroup>

        <TextView
            android:id="@+id/occupation_tenant_profile_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pets_tenant_activity"
            android:layout_marginTop="20dp"
            android:text="@string/occupation"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/occupation_tenant_profile_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/petsRadioGroup"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:entries="@array/occupation"/>

        <TextView
            android:id="@+id/short_bio_tenant_profile_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/occupation_tenant_profile_textView"
            android:layout_marginTop="20dp"
            android:text="@string/short_bio"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/short_bio_tenant_profile_editText"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@id/short_bio_tenant_profile_textView"
            android:hint="@string/insert_your_bio"
            android:textSize="10dp"
            android:lines="5"
            android:maxLines="5"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"/>

        <!-- Picture Button -->

        <Button
            android:id="@+id/take_a_picture_tenant_profile_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/short_bio_tenant_profile_editText"
            android:hint="@string/take_picture_tenant_profile"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:textStyle="bold"
            />

        <!-- Save Button -->

        <Button
            android:id="@+id/done_1_tenant_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/take_a_picture_tenant_profile_button"
            android:hint="@string/done_1_tenant_profile"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:textStyle="bold"/>

    </RelativeLayout>
</ScrollView>