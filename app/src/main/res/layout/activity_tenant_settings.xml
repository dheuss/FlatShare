<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tenant_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.flatshare.presentation.ui.activities.profile.TenantSettingsActivity"
    android:background="@color/windowBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/initial_tenant_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/create_your_tenant_setting"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/price_range_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_range"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@+id/initial_tenant_setting"/>

        <TextView
            android:id="@+id/price_range_textview_minPRICE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/price_range_textview"
            android:layout_marginLeft="20dp"
            android:text=""
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/initial_tenant_setting"/>

        <TextView
            android:id="@+id/price_range_textview_TO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/price_range_textview_minPRICE"
            android:layout_marginLeft="30dp"
            android:text="to"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/initial_tenant_setting"/>

        <TextView
            android:id="@+id/price_range_textview_maxPRICE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/price_range_textview_TO"
            android:layout_marginLeft="30dp"
            android:text=""
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/initial_tenant_setting"/>

        <com.appyvet.rangebar.RangeBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar_price_range"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            custom:tickStart="300"
            custom:tickInterval="50"
            custom:tickEnd="2500"
            custom:selectorSize="4dp"
            android:layout_below="@+id/price_range_textview"
            custom:connectingLineColor="@color/colorPrimary"
            custom:pinColor="@color/colorPrimary"
            custom:rangeBarColor="@color/colorPrimary"
            custom:selectorColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/size_range_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/size_range"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@+id/rangebar_price_range"/>

        <TextView
            android:id="@+id/size_range_textview_minSIZE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/size_range_textview"
            android:layout_marginLeft="20dp"
            android:text=""
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/rangebar_price_range" />

        <TextView
            android:id="@+id/size_range_textview_TO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/size_range_textview_minSIZE"
            android:layout_marginLeft="30dp"
            android:text="to"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/rangebar_price_range"/>

        <TextView
            android:id="@+id/size_range_textview_maxSIZE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/size_range_textview_TO"
            android:layout_marginLeft="30dp"
            android:text=""
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/rangebar_price_range"/>

        <com.appyvet.rangebar.RangeBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar_size_range"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            custom:tickStart="15"
            custom:tickInterval="5"
            custom:tickEnd="60"
            android:layout_below="@+id/size_range_textview"
            custom:connectingLineColor="@color/colorPrimary"
            custom:pinColor="@color/colorPrimary"
            custom:rangeBarColor="@color/colorPrimary"
            custom:selectorColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/area_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@+id/rangebar_size_range"/>

        <TextView
            android:id="@+id/purpose_community_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/purpose_community"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@+id/area_textview"/>

        <RadioGroup
            android:id="@+id/purposeCommunityRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/area_textview"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/necessaryPCRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/necessary" />

            <RadioButton
                android:id="@+id/notNecessaryPCRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notNecessary" />
        </RadioGroup>

        <TextView
            android:id="@+id/smoking_apartment_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smoking_apartment"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/purpose_community_textview"/>

        <RadioGroup
            android:id="@+id/smoker_apartment_RadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/purposeCommunityRadioGroup"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/necessarySARadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/necessary" />

            <RadioButton
                android:id="@+id/notNecessarySARadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notNecessary" />
        </RadioGroup>

        <TextView
            android:id="@+id/balcony_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balcony"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/smoking_apartment_textview"/>

        <RadioGroup
            android:id="@+id/balconyRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/smoker_apartment_RadioGroup"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/necessaryBRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/necessary" />

            <RadioButton
                android:id="@+id/notNecessaryBRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notNecessary"/>
        </RadioGroup>

        <TextView
            android:id="@+id/internet_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/internet"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/balcony_textview"/>

        <RadioGroup
            android:id="@+id/internetRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/balconyRadioGroup"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/internetYESRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/necessary" />

            <RadioButton
                android:id="@+id/internetNORadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notNecessary" />
        </RadioGroup>

        <TextView
            android:id="@+id/cabel_tv_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cabeltv"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/internet_textview"/>

        <RadioGroup
            android:id="@+id/cabelTVRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/internetRadioGroup"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/cabelTVYESRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/necessary" />

            <RadioButton
                android:id="@+id/cableTVNORadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notNecessary" />
        </RadioGroup>

        <TextView
            android:id="@+id/washing_machine_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/washing_machine"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/cabel_tv_textview"/>

        <RadioGroup
            android:id="@+id/washingMashineRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/cabelTVRadioGroup"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/washingMashineYESRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/necessary" />

            <RadioButton
                android:id="@+id/washingMashineNORadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notNecessary" />
        </RadioGroup>

        <TextView
            android:id="@+id/dryer_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dryer"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/washing_machine_textview"/>

        <RadioGroup
            android:id="@+id/dryerRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/washing_machine_textview"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/dryerYESRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/necessary" />

            <RadioButton
                android:id="@+id/dryerNORadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notNecessary" />
        </RadioGroup>

        <TextView
            android:id="@+id/bathtube_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bathtube"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/dryer_textview"/>

        <RadioGroup
            android:id="@+id/bathTubeRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/dryer_textview"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bathTubeYESRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/necessary" />

            <RadioButton
                android:id="@+id/bathTubeNORadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notNecessary" />
        </RadioGroup>

        <TextView
            android:id="@+id/pets_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pets"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_below="@id/bathtube_textview"/>

        <RadioGroup
            android:id="@+id/petsRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bathtube_textview"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/petsYESRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/necessary" />

            <RadioButton
                android:id="@+id/petsNORadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notNecessary" />
        </RadioGroup>

        <!-- Save Button -->

        <Button
            android:id="@+id/done_2_tenant_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/done_1_tenant_profile"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_below="@id/pets_textview"/>

    </RelativeLayout>

</ScrollView>
