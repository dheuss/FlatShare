<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tenant_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground"
    tools:context="com.flatshare.presentation.ui.activities.profile.TenantSettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tenant_setting_inital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/create_your_tenant_setting"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tenant_settings_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tenant_setting_inital"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:gravity="center"
            android:text="@string/tenant_settings_description" />

        <TextView
            android:id="@+id/tenant_settings_price_range_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tenant_settings_info"
            android:layout_marginLeft="@dimen/marginTop"
            android:layout_marginRight="@dimen/marginTop"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/price_range_info" />

        <TextView
            android:id="@+id/tenant_settings_price_range_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/tenant_settings_price_range_info"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:text="My price range is from " />

        <TextView
            android:id="@+id/tenant_settings_price_range_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tenant_settings_price_range_info"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@+id/tenant_settings_price_range_1"
            android:text="0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tenant_settings_price_range_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tenant_settings_price_range_info"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_settings_price_range_2"
            android:text="€ to" />

        <TextView
            android:id="@+id/tenant_settings_price_range_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tenant_settings_price_range_info"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_settings_price_range_3"
            android:text="0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tenant_settings_price_range_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tenant_settings_price_range_info"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_settings_price_range_4"
            android:text="€" />

        <com.appyvet.rangebar.RangeBar xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar_price_range"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/tenant_settings_price_range_1"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            custom:connectingLineColor="@color/colorPrimary"
            custom:pinColor="@color/colorPrimary"
            custom:pinRadius="17.5dp"
            custom:rangeBarColor="@color/colorPrimary"
            custom:selectorColor="@color/colorPrimary"
            custom:selectorSize="5dp"
            custom:tickEnd="1200"
            custom:tickInterval="50"
            custom:tickStart="300" />

        <TextView
            android:id="@+id/size_apartment_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rangebar_price_range"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/size_apartment" />

        <TextView
            android:id="@+id/tenant_settings_size_range_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/size_apartment_0"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:text="The room size should be from " />

        <TextView
            android:id="@+id/tenant_settings_size_range_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/size_apartment_0"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@+id/tenant_settings_size_range_1"
            android:text="0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tenant_settings_size_range_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/size_apartment_0"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_settings_size_range_2"
            android:text="qm to" />

        <TextView
            android:id="@+id/tenant_settings_size_range_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/size_apartment_0"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_settings_size_range_3"
            android:text="0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tenant_settings_size_range_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/size_apartment_0"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/tenant_settings_size_range_4"
            android:text="qm" />

        <com.appyvet.rangebar.RangeBar xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar_size_range"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/tenant_settings_size_range_5"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            custom:connectingLineColor="@color/colorPrimary"
            custom:pinColor="@color/colorPrimary"
            custom:pinRadius="17.5dp"
            custom:rangeBarColor="@color/colorPrimary"
            custom:selectorColor="@color/colorPrimary"
            custom:selectorSize="5dp"
            custom:tickEnd="30"
            custom:tickInterval="1"
            custom:tickStart="12" />

        <TextView
            android:id="@+id/area_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rangebar_size_range"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:text="@string/area_apartment" />

        <!--<com.google.android.gms.maps.MapView-->
            <!--android:id="@+id/map"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->

        <LinearLayout
            android:id="@+id/LinearLayoutPurposeCommunity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/area_0"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/purpose_community_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/purpose_community" />

            <RadioGroup
                android:id="@+id/purposeCommunity_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/purposeCommunityYES_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up" />

                <RadioButton
                    android:id="@+id/purposeCommunityNO_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutSmokingApartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayoutPurposeCommunity"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/smoking_apartment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/smoking_apartment" />

            <RadioGroup
                android:id="@+id/smokingApartment_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/smokingApartmentYES_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up" />

                <RadioButton
                    android:id="@+id/smokingApartmentNO_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutBalcony"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayoutSmokingApartment"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/balcony_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/balcony" />

            <RadioGroup
                android:id="@+id/balcony_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/balconyYES_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up" />

                <RadioButton
                    android:id="@+id/balconyNO_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutInternet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LinearLayoutBalcony"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/internet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/internet" />

            <RadioGroup
                android:id="@+id/internet_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/internetYES_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up" />

                <RadioButton
                    android:id="@+id/internetNO_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutCabelTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayoutInternet"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/cabeltv" />

            <RadioGroup
                android:id="@+id/tv_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tvYES_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up" />

                <RadioButton
                    android:id="@+id/tvNO_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutWashingMashine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LinearLayoutCabelTV"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/wahsing_maschine_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/washing_machine" />

            <RadioGroup
                android:id="@+id/washingMashine_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/washingMashineYES_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up" />

                <RadioButton
                    android:id="@+id/washingMashineNO_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutDryer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LinearLayoutWashingMashine"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/dryer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/dryer" />

            <RadioGroup
                android:id="@+id/dryer_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/dryerYES_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up" />

                <RadioButton
                    android:id="@+id/dryerNO_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutBathtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayoutDryer"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/batchtube_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bathtube" />

            <RadioGroup
                android:id="@+id/bathTube_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/bathTubeYES_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up" />

                <RadioButton
                    android:id="@+id/bathTubeNO_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutPets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayoutBathtube"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight">

            <TextView
                android:id="@+id/pets_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/pets" />

            <RadioGroup
                android:id="@+id/pets_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/petsYES_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_up" />

                <RadioButton
                    android:id="@+id/petsNO_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/thumb_down" />
            </RadioGroup>
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/done_2_tenant_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayoutPets"
            android:layout_marginBottom="@dimen/marginTop"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:layout_marginTop="@dimen/marginTop"
            android:background="@color/colorPrimaryDark"
            android:hint="@string/done_1_tenant_profile"
            android:textColor="@color/buttonText"
            android:textColorHint="@color/buttonText"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>
